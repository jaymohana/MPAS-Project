@model MPAS.Domain.Entities.Chatroom

@{
    ViewBag.Title = "Chatroom";
}

<h2><b>Chatroom</b></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>
            @*@Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "col-md-2" })*@
                <p style="padding-left:15px"><b>Message</b><p>
                </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Post" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table class="table">
    @*<tr>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th></th>
    </tr>*@


    @foreach (var item in ViewBag.chats)
    {
        <tr>
            <td>
                <b>@item.posterUserName </b> : @item.Message
            </td>
        </tr>
    }


</table>



@model IEnumerable<MPAS.Domain.Entities.MenteeFeedback>

@{
    ViewBag.Title = "Index";
}

<h2><b>Feedback: Mentee</b></h2>

<p>
    @Html.ActionLink("Add Feedback", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <text> Mentor Name </text>
        </th>

        <th>
             <text> Attendance </text>
        </th>

        <th>
            <text> Mentor Rating </text>
        </th>

        <th>
            <text> Feedback Message </text>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MentorName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Attendance)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.FeedbackMessage)
        </td>

        <td>

            @Html.ActionLink("Details", "Details", new { id = item.Id }) 

            @if (User.IsInRole("Admin"))
            {            
            @Html.ActionLink(" | Delete", "Delete", new { id = item.Id })
            }
        </td>
        
    </tr>
}

</table>

@model MPAS.Domain.Entities.RoleUser

@{
    ViewBag.Title = "Create";
}

@*@if (TempData["notice"] != null)
{
<p>= Html.Encode(TempData["notice"])</p>
}*@

<h2><b>Manage Users</b></h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div>
                <p style="padding-left:15px"><b>User Name</b><p>
            </div>
            <div class="col-md-10" style="width: 400px">

                @Html.DropDownListFor(model => model.UserId, ViewBag.fruitlist as SelectList, "Select User", new { style = "width: 100%;" })

            </div>
        </div>

        <div class="form-group">
            <div>
                <p style="padding-left:15px"><b>Role</b><p>
            </div>
            <div class="col-md-10" style="width: 400px">

                @Html.DropDownListFor(model => model.Role , ViewBag.roleslist as SelectList, "Select Role", new { style = "width: 100%;" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Roles" class="btn btn-default" />
            </div>
        </div>
    </div>
}


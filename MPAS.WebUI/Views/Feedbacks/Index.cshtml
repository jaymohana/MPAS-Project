@model IEnumerable<MPAS.Domain.Entities.Feedback>

@{
    ViewBag.Title = "Index";
}

<h2><b>Feedback: Mentor</b></h2>

<p>
    @Html.ActionLink("Add Feedback", "Create")
</p>
<table class="table">
    <tr>

        <!--   <th>
            <text> User </text>
        </th>-->
     


        <th>
        <text> Mentor Name </text> 
        </th>



        <th>
        <text> Date </text> 
        </th>


        <th>
        <text> Mentee Name </text> 
        </th>



        <th>
        <text> Concerns </text> 
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>




        <td>
            @Html.DisplayFor(modelItem => item.MentorName)
        </td>



        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>



        <td>
            @Html.DisplayFor(modelItem => item.MenteeName)
        </td>




        <td>
            @Html.DisplayFor(modelItem => item.WorriedStatus)
        </td>






        <td>
            
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink(" | Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>

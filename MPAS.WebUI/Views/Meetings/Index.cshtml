@model IEnumerable<MPAS.Domain.Entities.Meeting>

@{
    ViewBag.Title = "Meetings";
}

<h2><b>Meetings</b></h2>

<p>

@if ((User.IsInRole("Admin")) || (User.IsInRole("Mentor")))
{
    @Html.ActionLink("Create Meeting", "Create")

}
</p>
<table class="table">
    <tr>
        <th>
            Mentor Name
        </th>
        <th>
            Date
        </th>
        <th>
            Available Slots
        </th>
        <th>
            Venue
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.mentorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.postDate, "Date Posted")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.available, "Available")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.venueName, "Venue")
        </td>
        @*<td>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Join" onclick="@("window.location.href='" + @Url.Action("Join", "Meetings") + "'")" class="btn btn-default" />
                </div>
            </div>
        </td>*@
        <td>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if (item.available < 1)
                    {
                        <p>Full</p>
                    }
                    else
                    {
                        @Html.ActionLink("Join", "Edit", new { id = item.Id })
                    }
                </div>
            </div>
        </td>
    </tr>
}

</table>
